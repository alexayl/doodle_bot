config DOODLE_A4988_STEPPER
	bool "A4988 Stepper Motor Driver"
	default y
	depends on DT_HAS_DOODLE_A4988_STEPPER_ENABLED
	select STEPPER
	select STEP_DIR_STEPPER
	select STEP_DIR_STEPPER_COUNTER_TIMING if $(dt_node_has_prop,$(dt_nodelabel_path,stepper_left),counter)
	help
	  A4988 stepper driver using Zephyr's step_dir framework.
	  Uses GPIO toggling for step pulses (no PWM interference).
